{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"jsx": "preserve",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"declaration": true,
		"outDir": "./lib",
		"baseUrl": "./src",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	]
}